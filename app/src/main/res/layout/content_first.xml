<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hrushipc.stregapp.FirstActivity"
    tools:showIn="@layout/activity_first"
    android:background="@drawable/backimage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:verticalScrollbarPosition="defaultPosition">
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Team Name:"
                     android:textStyle="bold"
                     android:textSize="18dp"
                     android:textColor="#FFFFFF"
                     style="@style/EditTextCustomHolo"
                     android:layout_marginLeft="10dp"
                     android:layout_marginRight="5dp" />
                 <EditText
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="25dp"
                     android:hint="@string/my_hint"
                     android:inputType="textCapWords|textPersonName"
                     android:textColor="#FFFFFF"
                     android:textColorHint="#777575"
                     android:layout_marginRight="5dp"
                     android:layout_marginBottom="20dp"
                     android:id="@+id/team_name"
                     android:cursorVisible="true"
                     android:textCursorDrawable="@null"/>

             </LinearLayout>

             <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Team Member"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textColorHighlight="#FFFFFF"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textCapWords|textPersonName"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Enter your Name"
                android:textColorHint="#838383"
                android:textSize="16dp"
                android:id="@+id/editText1"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Number:"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:inputType="textCapCharacters"
                android:layout_marginBottom="40dp"
                android:padding="5dp"
                android:hint="Enter your Entry Number"
                android:textColorHint="#838383"
                android:textSize="16dp"
                android:id="@+id/editText2"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Second Team Member"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textAllCaps="true"
                android:textStyle="italic"
                android:textColorHighlight="#FFFFFF"
                android:gravity="center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:inputType="textCapWords|textPersonName"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:hint="Enter your Name"
                android:textColorHint="#838383"
                android:textSize="16dp"
                android:id="@+id/editText3"
                android:textCursorDrawable="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entry Number:"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:inputType="textCapCharacters"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="40dp"
                android:padding="5dp"
                android:hint="Enter your Entry Number"
                android:textColorHint="#838383"
                android:textSize="16dp"
                android:id="@+id/editText4"
                android:textCursorDrawable="@null"/>


            <LinearLayout
                android:id="@+id/add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            <Button
                android:id="@+id/add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt3"
                android:text="ADD MEMBER"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="110dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/third_layout"
                android:visibility="gone"    >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Third Team Member"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:textAllCaps="true"
                    android:textStyle="italic"
                    android:textColorHighlight="#FFFFFF"
                    android:gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:padding="5dp"
                    android:inputType="textCapWords|textPersonName"
                    android:hint="Enter your Name"
                    android:textColorHint="#838383"
                    android:textSize="16dp"
                    android:id="@+id/editText5"
                    android:textCursorDrawable="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Number:"
                    android:textColor="#FFFFFF"
                    android:textSize="16dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="40dp"
                    android:padding="5dp"
                    android:inputType="textCapCharacters"
                    android:hint="Enter your Entry Number"
                    android:textColorHint="#838383"
                    android:textSize="16dp"
                    android:id="@+id/editText6"
                    android:textCursorDrawable="@null"/>
                <Button
                    android:id="@+id/remove_btn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt3"
                    android:text="DELETE MEMBER"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="80dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt3"
                    android:height="20dp"
                    android:width="60dp"
                    android:text="RESET"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:id="@+id/reset" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt3"
                    android:height="20dp"
                    android:width="50dp"
                    android:text="SUBMIT"
                    android:layout_marginLeft="25dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:id="@+id/submit" />
            </LinearLayout>
         </LinearLayout>
    </ScrollView>


</RelativeLayout>
